<?xml version="1.0" encoding="UTF-8"?>
<plugin id="fkmit-fido-webview-plugin" version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>Fido Webview Plugin</name>
    <description>Fido support for Android Webviews.</description>

    <engines>
        <engine name="cordova" version=">=10.0.0"/>
    </engines>

    <platform name="android">

        <framework
            src="org.jetbrains.kotlin:kotlin-stdlib-jdk8:2.3.0"
            type="gradle" />

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="FidoWebview">
                <param name="android-package" value="com.fkmit.fido.FidoWebview"/>
            </feature>
        </config-file>

        <source-file src="src/android/FidoWebview.kt" target-dir="src/com/fkmit/fido"/>

    </platform>

    <js-module src="www/FidoWebview.js" name="FidoWebview">
        <clobbers target="FidoWebview"/>
    </js-module>

</plugin>
